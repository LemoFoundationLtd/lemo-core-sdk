    "xmlhttprequest": "*"
  },
  "browser": {
    "xmlhttprequest": "./lib/utils/browser-xhr.js"
  },
  "devDependencies": {
    "browserify": ">=10.0",
    "chai": "^3.0.0",
    "coveralls": "^2.11.2",
    "del": ">=2.0.2",
    "exorcist": "^0.4.0",
    "gulp": ">=3.9.0",
    "gulp-jshint": ">=1.5.0",
    "gulp-rename": ">=1.2.0",
